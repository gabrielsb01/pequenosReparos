.home
    position relative
    padding 0 10px
    margin-top 8px
    .additionalColumn
        display flex
        flex-direction column
        justify-content center

        button 
            margin 5px 0
            
    .damage
        top 0
        position absolute
        right 0
        width calc(100%/3)
        height 100%
        background-color rgba(27,30,36,.95)

        .header
            padding 20px
            display flex
            align-items center
            justify-content space-between
            h5
                color #fff
            button
                color #fff  
        .damageType
            padding 20px 
            .title
                color #fff
            .damageSelectType
                padding 20px 0
                .damageTypeButton
                    margin-right 5px

            .textField
                background-color #ffffff
                border-radius 5px
                color: #000000
            .isPaint
                color #ffffff
                padding 20px 0
                     

        .submitButton
            position absolute
            bottom 0
            padding 15px 22px
            background-color #1dbd55 
            border-radius 0

    .carView
        padding 10px
        height calc(100vh - 136px)
        display flex
        align-items:center
        justify-content center
        
        img 
            max-width 100%
            max-height 100%

